}

#search-input{
    width: 560px;
    height: 42px;
    font-size: 20px;
    padding: 0 20px;
    float: left;
    /*去除外边框*/
    outline: none;
    border: 2px solid #e0e0e0;
}
#search-input:focus{
    border-color: #398bfb;}
header .search_button{
    width: 100px;
    height: 44px;
    background-color: #398bfb;
    border: none;
    float: left;
    color: #fff;
    /*去除外边框*/
    outline: none;
    font-size: 16px;
    cursor: pointer;
}

#search_button1{
    margin-left: 10px;
}
/*网址导航设置*/
header .list{width:900px; margin:0 auto ; clear: both}
header  ul li{
    width: 70px;
