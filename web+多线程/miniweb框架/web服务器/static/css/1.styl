}
 .clearfix:before,
.clearfix:after{
    content: '';
    display: table;
    clear: both;
}
 a{
     text-decoration: none;
     color: #000000;
 }
/***************************************导航-start*******************************************/
#nav{
    width: 100%;
    height: 38px; /*!important; 强制优先级   */
    border: 1px solid #ebebeb;
    margin-bottom: 40px;
    position: fixed;
    background-color: white;

}
#nav a{
    color: #555555;
    font-size: 15px;
    margin-left: 11px;
}
#nav a:hover{
    background-color: #cccccc;
}
#nav .nav-left{
    width: 270px;
    height: 100%;
    float: left;
    text-align: left;
    line-height: 33px;
}
#nav .nav-right{
    width: 600px;
    height: 100%;
    float: right;
    text-align: right;
    line-height: 33px;
}
#nav .nav-right a{
    font-weight: bolder;
    margin-left: 15px;
}
#nav .nav-right a.more-product{
    background-color: #398bfb;
    /*行内--> 行内-块级*/
    display: inline-block;
    width: 86px;
    height: 33px;
    line-height: 33px;
    text-align: center;
    color: #fff;
    text-decoration: none;
    vertical-align: 0;
}
/***************************************导航-end*******************************************/


